---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";

type MainnetData = {
  title: string;
  description: string;
  image: string;
};

const mainnetData: MainnetData[] = [
  {
    title: "Selfchain ",
    description: "An Intent-Centric Access Layer",
    image: "/assets/mainnet/selfchain.webp"
  },
  {
    title: "Tangle Network",
    description: "Modular Restaking Infrastructure",
    image: "/assets/mainnet/tangle.webp"
  }
];
---

<BaseLayout
  title="Mainnet | Dwentz™"
  description="Learn about Dwentz™ most recent Mainnet"
>
  <div class="stack gap-20">
    <header class="wrapper hero">
      <Hero
        align="center"
        title="Mainnet Network"
        tagline="Learn about our latest mainnet deployment."
      />
    </header>

    <main class="wrapper stack gap-10">
      <div class="mainnet-grid">
        {mainnetData.map((item) => (
          <div class="mainnet-card">
            <img class="mainnet-card__image" src={item.image} alt={item.title} />
            <div class="mainnet-card__content">
              <h3 class="mainnet-card__title">{item.title}</h3>
              <p class="mainnet-card__description">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </main>
  </div>
</BaseLayout>

<style lang="scss">
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-inline: 0.5rem;
    gap: 0.5rem;

    img {
      width: 50%;
      max-width: 10rem;
    }
  }

  .mainnet-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;

    @media (min-width: 40em) {
      grid-template-columns: repeat(2, 1fr);
    }

    @media (min-width: 60em) {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .mainnet-card {
    background: var(--gradient-subtle);
    border: 1px solid var(--accent-regular); // Mengurangi ketebalan border
    border-radius: 0.5rem; // Sesuaikan border-radius
    box-shadow: var(--shadow-sm);
    transition: var(--theme-transition);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 0.5rem; // Sesuaikan padding agar lebih kecil

    &:hover {
      box-shadow: var(--shadow-md);
      border: 1px solid var(--accent-dark); // Sesuaikan ketebalan border pada hover
      filter: brightness(1.1);
      transform: translateY(-0.5rem);
    }

    &__image {
    width: 200px;
    height: 200px;
    object-fit: cover;
    border-radius: 0.5rem;
    margin-bottom: 0.5rem; // Sesuaikan margin agar lebih kecil
  }

    &__content {
      padding: 0.5rem; // Sesuaikan padding agar lebih kecil
    }

    &__title {
    font-size: var(--text-md);
    margin-bottom: 0.25rem; // Sesuaikan margin agar lebih kecil
    color: var(--gray-900);
    background-color: var(--accent-regular); // Warna latar belakang judul
    padding: 0.25rem 0.5rem; // Padding agar judul lebih terlihat
    border-radius: 0.25rem; // Border radius untuk judul
  }

    &__description {
      font-size: var(--text-sm);
      color: var(--gray-600);
      --max-lines: 3;
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: var(--max-lines);
    }
  }
</style>
