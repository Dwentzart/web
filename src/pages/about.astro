---
import BaseLayout from "../layouts/BaseLayout.astro";
import Link from "../components/ui/link.astro";
import Icon from "../components/ui/Icon.astro";
import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";
import Skills from "../components/Skills.astro";
---

<BaseLayout
  title="About Me | Dwentzâ„¢"
  description="About Me."
>
  <div class="stack gap-20">
    <header class="wrapper hero">
      <div class="hero-content">
        <Hero
          align="left"
          title="About Me"
          tagline=" I'm Dwentz, an individual POS validator from Indonesia with over 1.5 years of experience running validator nodes"
        />
      </div>
      <img
        alt="illustration of a men coding web projects"
        src="/assets/illustrations/about.svg"
      />
    </header>

    <main class="wrapper stack gap-10">
      <Skills />
      <ContactCTA />
    </main>
  </div>
</BaseLayout>

<style lang="scss">
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-inline: 2.5rem;
    gap: 1.5rem;

    img {
      width: 100%;
      max-width: 22rem;
    }

    .link {
      width: fit-content;
      margin: 1rem auto;
    }
  }

  @media (min-width: 50em) {
    .hero {
      flex-direction: row;
      gap: 6rem;
    }
  }
</style>
