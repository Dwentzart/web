---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";

type testnetData = {
  title: string;
  description: string;
  image: string;
};

const testnetData: testnetData[] = [
    {
    title: "Airchains",
    description: "Seamlessly zk for unmatched speed and privacy with zkRollup Framework, with diverse options for execution and data availability",
    image: "/assets/testnet/airchains.webp"
    },
    {
    title: "Avail ",
    description: "Avail is a Web3 infrastructure layer that allows modular execution layers to scale and interoperate in a trust minimized way.",
    image: "/assets/testnet/avail.webp"
    },
    {
    title: "Ar.io",
    description: "AR.IO is a network of decentralized gateways and permanent domains that power the permaweb.",
    image: "/assets/testnet/ario.webp"
    },
    {
    title: "Dwallet",
    description: "dWallet Network introduces Zero Trust Protocols (ZTPs), operating natively across different networks without bridging or wrapping.",
    image: "/assets/testnet/dwallet.webp"
    },
    {
    title: "Devolved",
    description: "Devolved AI is a decentralized, cutting-edge, fair launched Layer-1 blockchain dedicated to fostering global participation in the evolution of building AI models, dApps and an advanced Large Language Model (LLM)",
    image: "/assets/testnet/devolved.webp"
    },
    {
    title: "DoraVota",
    description: "Digital infrastructure for public good staking and decentralized governance - decentralize PoS networks and empower public goods.",
    image: "/assets/testnet/dora.webp"
    },
    {
    title: "Sending",
    description: "The Communication Layerfor Web3.",
    image: "/assets/testnet/sending.webp"
    }
];
---

<BaseLayout
  title="Testnet | Dwentz™"
  description="Learn about Dwentz™ most recent testnet"
>
  <div class="stack gap-20">
    <header class="wrapper hero">
      <Hero
        align="center"
        title="Testnet Network"
        tagline="Learn about our latest testnet deployment."
      />
    </header>

    <main class="wrapper stack gap-10">
      <div class="testnet-grid">
        {testnetData.map((item) => (
          <div class="testnet-card">
            <img class="testnet-card__image" src={item.image} alt={item.title} />
            <div class="testnet-card__content">
              <h3 class="testnet-card__title">{item.title}</h3>
              <p class="testnet-card__description">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </main>
  </div>
</BaseLayout>

<style lang="scss">
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-inline: 0.5rem;
    gap: 0.5rem;

    img {
      width: 50%;
      max-width: 10rem;
    }
  }

  .testnet-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;

    @media (min-width: 40em) {
      grid-template-columns: repeat(2, 1fr);
    }

    @media (min-width: 60em) {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .testnet-card {
    background: var(--gradient-subtle);
    border: 1px solid var(--accent-regular); // Mengurangi ketebalan border
    border-radius: 0.5rem; // Sesuaikan border-radius
    box-shadow: var(--shadow-sm);
    transition: var(--theme-transition);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 0.5rem; // Sesuaikan padding agar lebih kecil

    &:hover {
      box-shadow: var(--shadow-md);
      border: 1px solid var(--accent-dark); // Sesuaikan ketebalan border pada hover
      filter: brightness(1.1);
      transform: translateY(-0.5rem);
    }

    &__image {
    width: 200px;
    height: 200px;
    object-fit: cover;
    border-radius: 0.5rem;
    margin-bottom: 0.5rem; // Sesuaikan margin agar lebih kecil
    background-color: #000; // Warna latar belakang hitam
    display: flex;
    justify-content: center;
    align-items: center;
    }

    &__content {
      padding: 0.5rem; // Sesuaikan padding agar lebih kecil
    }

    &__title {
    font-size: var(--text-md);
    margin-bottom: 0.25rem; // Sesuaikan margin agar lebih kecil
    color: var(--gray-900);
    background-color: var(--accent-regular); // Warna latar belakang judul
    padding: 0.25rem 0.5rem; // Padding agar judul lebih terlihat
    border-radius: 0.25rem; // Border radius untuk judul
  }

    &__description {
      font-size: var(--text-sm);
      color: var(--gray-600);
      --max-lines: 3;
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: var(--max-lines);
    }
  }
</style>
