---
import Icon from "./ui/Icon.astro";

const { repo, link, description, language, languageColor, image } = Astro.props;
---

<a class="repo-card" href={link} title="View repo" target="_blank">
  <img class="repo-card__image" src={image} alt={`Image for ${repo}`} />
  <div class="repo-card__content">
    <h3 class="repo-card__title">{repo}</h3>
    <p class="repo-card__description">
      {description}
    </p>
  </div>
  <div class="repo-card__footer">
    <span
      class="repo-card__footer-lang-color"
      style={{
        backgroundColor: languageColor,
      }}></span>
    <span class="repo-card__footer-language">{language}</span>
    <Icon icon="github-logo" color="var(--gray-200)" size="2em" />
  </div>
</a>

<style lang="scss">
  .repo-card {
    display: block;
    text-decoration: none;
    padding: 0;
    background: var(--gradient-subtle);
    border: 0.5px solid var(--accent-regular);
    box-shadow: var(--shadow-sm);
    border-radius: 0.1rem;
    transition: var(--theme-transition);
    overflow: hidden;

    &:hover {
      box-shadow: var(--shadow-md);
      border: 0.5px solid var(--accent-dark);
      filter: brightness(1.1);
      transform: translateY(-0.5rem);
    }

    &__image {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 0.5rem 0.5rem 0 0;
    }

    &__content {
      padding: 0.1rem;
    }

    &__title {
      font-size: var(--text-lg);
      margin-bottom: 0.5rem;
      color: var(--gray-900);
    }

    &__description {
      margin: 0.8rem 0;
      color: var(--gray-600);
      --max-lines: 3;
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: var(--max-lines);
    }

    &__footer {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.75rem 1rem;
      background: var(--gray-100);

      &-language {
        color: var(--gray-800);
        font-weight: bold;
      }

      &-lang-color {
        width: 1.25rem;
        height: 1.25rem;
        border-radius: 50%;
      }
    }
  }
</style>
